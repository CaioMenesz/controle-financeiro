
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/app/views/personal_transactions/style.css">
</head>

<body>

  <header class="header">

    <div class="identity">
      <a href="/"><img src="https://cdn.discordapp.com/attachments/382526426047315968/1075552121920966786/Vector.png"></a>
      <h1>Finacial Control</h1>
    </div>

    <nav class="nav">
      <button class="new-trans">Nova Transação</button>
    </nav>

  </header>

  <main>

    <section class="app">
      <div class="col">
        <div class="row">
          <h3>Entradas</h3>
          <img src="https://cdn.discordapp.com/attachments/382526426047315968/1075553069988851722/entry.png">
          <!-- usar funçao do ruby aqui! -->
          <h2>R$<%= @sum %></h2>
        </div>
        <div class="row">
          <h3>Saídas</h3>
          <img src="https://cdn.discordapp.com/attachments/382526426047315968/1075553070223736882/out.png">
          <!-- usar funçao do ruby aqui! -->
          <h2>R$<%= @sumDif %></h2>
        </div>
        <div class="row">
          <h3>Lucro</h3>
          <img src="https://cdn.discordapp.com/attachments/382526426047315968/1075553069779128350/liquid-cash.png">
          <!-- usar funçao do ruby aqui! -->
          <h2>R$<%= @liquid %></h2>
        </div>
      </div>
      <div class="col-2">
        <div class="sub-col description">
        
        <div class="row-info">
          <% @personal_transactions.each do |personal_transaction| %>
          <ul class="transactions">
            <img src="https://cdn.discordapp.com/attachments/382526426047315968/1075553070223736882/out.png">
              <li><p><%= personal_transaction.description %></p></li>
              <li><p><%= personal_transaction.amount %></p></li>
              <li><p><%= personal_transaction.title %></p></li>
              <li><p><%= personal_transaction.transaction_date %></p></li>
            </ul>
          <% end %>
        </div>

        </div>
      </div>
    </section>

  </main>

</body>
